@model LTWeb_05.Models.Product
@{
    ViewBag.Title = "EditMaxPrice";
}

<form class="form-horizontal" method="post" action="@Url.Action("UpdateMaxPrice", "Product")">
    <div>Bạn đấu giá sản phẩm</div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">ProID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ProID" readonly value="@Model.ProID">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">ProName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ProName" readonly value="@Model.ProName">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Price</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Price" readonly value="@(Model.Price)">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">MaxPrice</label>
        @if (Model.MaxPrice == Model.Price)
        {
            <div class="col-sm-6">
                <input type="text" class="form-control" name="MaxPrice" value="@(Model.MaxPrice + 10000)" readonly>
            </div>
        }
        @if (Model.MaxPrice > Model.Price && Convert.ToDouble(Model.MaxPrice) < ViewBag.bidprice && Convert.ToDouble(ViewBag.BidPriceMaxBefore) < ViewBag.bidprice)
        {
            <div class="col-sm-6">
                <input type="text" class="form-control" name="MaxPrice" value="@(ViewBag.BidPriceMaxBefore+10000)" readonly>
            </div>
        }
        @if (Model.MaxPrice > Model.Price && Convert.ToDouble(Model.MaxPrice) < ViewBag.bidprice && Convert.ToDouble(ViewBag.BidPriceMaxBefore) > ViewBag.bidprice)
        {
            <div class="col-sm-6">
                <input type="text" class="form-control" name="MaxPrice" value="@ViewBag.bidprice" readonly>
            </div>
        }
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Expried</label>
        <div class="col-sm-6">
            <input type="datetime" class="form-control" name="Expried" value="@Model.Expried" readonly>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Next</button>
        </div>
    </div>
    <div class="form-group">
        @*<label for="inputPassword3" class="col-sm-2 control-label">TinyDes</label>*@
        <div class="col-sm-6">
            <input type="hidden" class="form-control" name="TinyDes" readonly value="@Model.TinyDes">
        </div>
    </div>
    <div class="form-group">
        @*<label for="inputPassword3" class="col-sm-2 control-label">FullDes</label>*@
        <div class="col-sm-6">
            <input type="hidden" class="form-control" name="FullDes" readonly value="@Model.FullDes">
        </div>
    </div>
    <div class="form-group">
        @*<label for="inputPassword3" class="col-sm-2 control-label">CatID</label>*@
        <div class="col-sm-6">
            <input type="hidden" class="form-control" name="CatID" readonly value="@Model.CatID">
        </div>
    </div>
    <div class="form-group">
        @*<label for="inputPassword3" class="col-sm-2 control-label">Quantity</label>*@
        <div class="col-sm-6">
            <input type="hidden" class="form-control" name="CatID" readonly value="@Model.Quantity">
        </div>
    </div>
</form>
