@using LTWeb_05.Models
@model List<Category>
@{
    ViewBag.Title = "ListUser";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Manage Cat</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Basic Table</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <a href="@Url.Action("AddCat", "Manage")" class="btn btn-success" role="button">Add</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>CatID</th>
                                    <th>CatName</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td>@c.CatID</td>
                                        <td>@c.CatName</td>
                                        <td>
                                            <a href="@Url.Action("DeleteCat","Manage", new {id = c.CatID})" class="btn btn-danger" role="button">
                                                Delete
                                            </a>

                                        </td>
                                        <td>
                                            <a href="@Url.Action("EditCat","Manage", new {id = c.CatID})" class="btn btn-success" role="button">
                                                Update
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>

