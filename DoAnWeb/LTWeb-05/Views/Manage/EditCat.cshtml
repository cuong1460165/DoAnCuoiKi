
@{
    ViewBag.Title = "EditCat";
}
@model LTWeb_05.Models.Category
<form class="form-horizontal" method="post" action="@Url.Action("Update", "Manage")">
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Cat ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CatID" readonly value="@Model.CatID">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">CatName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CatName" value="@Model.CatName">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</form>
<a href="@Url.Action("ListCat","Manage")">Back</a>

